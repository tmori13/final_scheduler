<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All enrollments
    </h1>

    <a href="/enrollments/new" class="btn btn-block btn-outline-secondary">
      Add a new enrollment
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "enrollment_templates/enrollments_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Final
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @enrollments.each do |enrollment| %>
      <tr>
        <td>
          <%= enrollment.id %>
        </td>

        <td>
          <% if enrollment.user.present? %>
            <a href="/users/<%= enrollment.user.id %>">
              <%= enrollment.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if enrollment.final.present? %>
            <a href="/finals/<%= enrollment.final.id %>">
              <%= enrollment.final.course_identifier %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(enrollment.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(enrollment.updated_at) %> ago
        </td>

        <td>
          <a href="/enrollments/<%= enrollment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @enrollments, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
