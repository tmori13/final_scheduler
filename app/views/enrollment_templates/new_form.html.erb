<h1>
  Add a new enrollment
</h1>


<hr>

<form action="/create_enrollment" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="final_id">
      Final
    </label>

    <%= select_tag(:final_id, options_from_collection_for_select(Final.all, :id, :course_identifier, @enrollment.final_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create enrollment
  </button>
</form>

<hr>

<a href="/enrollments">
  Go back
</a>
